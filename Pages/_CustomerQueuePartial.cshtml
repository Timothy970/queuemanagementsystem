@model assignmentapp.Pages.ServicePointModel
<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<body>
    <h4>Customer Queue for @Model.SelectedTeller</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customer Number</th>
                <th>Check-In Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.CustomerQueue)
            {
                <tr>
                    <td>@customer.CustomerNumber</td>
                    <td>@customer.CheckInTime</td>
                    <td>
                        <button class="btn btn-success" onclick="customerAction(@customer.CustomerNumber, 'finished')">Mark
                            as Finished</button>
                        <button class="btn btn-danger" onclick="customerAction(@customer.CustomerNumber, 'noshow')">Mark
                            as No Show</button>
                        <!-- Add other buttons for additional actions -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

<script>
    function customerAction(customerNumber, action) {
        // Submit a form with the customer number and action
        var form = document.createElement("form");
        form.setAttribute("method", "post");
        form.setAttribute("action", "/ServicePoint");

        var inputCustomerNumber = document.createElement("input");
        inputCustomerNumber.setAttribute("type", "hidden");
        inputCustomerNumber.setAttribute("name", "customerNumber");
        inputCustomerNumber.setAttribute("value", customerNumber);

        var inputAction = document.createElement("input");
        inputAction.setAttribute("type", "hidden");
        inputAction.setAttribute("name", "action");
        inputAction.setAttribute("value", action);

        form.appendChild(inputCustomerNumber);
        form.appendChild(inputAction);

        document.body.appendChild(form);
        form.submit();
    }
</script>

</html>